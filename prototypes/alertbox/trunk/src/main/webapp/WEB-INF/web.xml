<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	id="WebApp_ID" version="3.0">
	<display-name>alertbox</display-name>

	<servlet>
		<servlet-name>monitor</servlet-name>
		<servlet-class>org.todomap.alertbox.servlet.MonitorServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet>
		<servlet-name>outages</servlet-name>
		<servlet-class>org.todomap.alertbox.servlet.OutagesServlet</servlet-class>
		<load-on-startup>2</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>monitor</servlet-name>
		<url-pattern>/monitor</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>outages</servlet-name>
		<url-pattern>/outage/*</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
</web-app>
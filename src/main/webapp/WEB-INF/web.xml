<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">


<web-app>

	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
			WEB-INF/controllers.xml
			WEB-INF/beans.xml
			WEB-INF/transactions.xml
			WEB-INF/security.xml
		</param-value>
	</context-param>

	<filter>
		<filter-name>rememberMapPosition</filter-name>
		<filter-class>org.todomap.o29.utils.security.RememberParamsFilter</filter-class>
		<init-param>
			<param-name>paramsToSave</param-name>
			<param-value>returnToLat,returnToLng,returnToZoom</param-value>
		</init-param>
		<init-param>
			<param-name>triggerParam</param-name>
			<param-value>returnToPosition</param-value>
		</init-param>
		<init-param>
			<param-name>triggerParamValue</param-name>
			<param-value>on</param-value>
		</init-param>
	</filter>

	<filter>
		<filter-name>enforceEncoding</filter-name>
		<filter-class>org.todomap.o29.utils.EnforceEncodingFilter</filter-class>
	</filter>

	<filter>
		<filter-name>cacheExpireFilter</filter-name>
		<filter-class>org.todomap.o29.utils.CacheExpireFilter</filter-class>
		<init-param>
			<param-name>secondsToExpire</param-name>
			<!-- 48 hours -->
			<param-value>172800</param-value>
		</init-param>
	</filter>

	<filter>
		<filter-name>oemiv</filter-name>
		<filter-class>org.springframework.orm.jpa.support.OpenEntityManagerInViewFilter</filter-class>
		<init-param>
			<param-name>entityManagerFactoryBeanName</param-name>
			<param-value>entityManager</param-value>
		</init-param>
	</filter>
	<filter>
		<filter-name>springSecurityFilterChain</filter-name>
		<filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
	</filter>
	<filter>
		<filter-name>jsonSecFilter</filter-name>
		<filter-class>org.todomap.o29.utils.security.SecurityFilter</filter-class>
	</filter>
	<filter>
		<filter-name>languageFilter</filter-name>
		<filter-class>org.todomap.o29.utils.LanguageFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>rememberMapPosition</filter-name>
		<url-pattern>/j_spring_openid_security_check</url-pattern>
	</filter-mapping>

	<filter-mapping>
		<filter-name>languageFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>enforceEncoding</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>springSecurityFilterChain</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>oemiv</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>jsonSecFilter</filter-name>
		<url-pattern>/services/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>cacheExpireFilter</filter-name>
		<url-pattern>/img/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>cacheExpireFilter</filter-name>
		<url-pattern>/style/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>cacheExpireFilter</filter-name>
		<url-pattern>/scripts/*</url-pattern>
	</filter-mapping>

	<listener>
		<listener-class>
			org.springframework.web.context.ContextLoaderListener
		</listener-class>
	</listener>

	<servlet>
		<servlet-name>CXFServlet</servlet-name>
		<display-name>CXF Servlet</display-name>
		<servlet-class>
			org.apache.cxf.transport.servlet.CXFServlet
		</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet>
		<servlet-name>rssServlet</servlet-name>
		<servlet-class>org.todomap.o29.utils.RssServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>regionRssServlet</servlet-name>
		<servlet-class>org.todomap.o29.utils.RegionRssServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>upload</servlet-name>
		<servlet-class>org.todomap.o29.utils.UploadServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>download</servlet-name>
		<servlet-class>org.todomap.o29.utils.DownloadServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>geoip</servlet-name>
		<servlet-class>org.todomap.o29.utils.GeoipServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>geoip</servlet-name>
		<url-pattern>/geoip</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>geoip</servlet-name>
		<url-pattern>/geoip.js</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>download</servlet-name>
		<url-pattern>/download/*</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>download</servlet-name>
		<url-pattern>/thumbnail/*</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>upload</servlet-name>
		<url-pattern>/upload/*</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>rssServlet</servlet-name>
		<url-pattern>rss.xml/*</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>regionRssServlet</servlet-name>
		<url-pattern>rss.xml/region/*</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>spring</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
        <servlet-name>spring</servlet-name>
        <url-pattern>*.html</url-pattern>
    </servlet-mapping>

	<servlet-mapping>
        <servlet-name>spring</servlet-name>
        <url-pattern>robots.txt</url-pattern>
    </servlet-mapping>

	<servlet-mapping>
        <servlet-name>spring</servlet-name>
        <url-pattern>/sitemaps/*</url-pattern>
    </servlet-mapping>

	<servlet-mapping>
		<servlet-name>CXFServlet</servlet-name>
		<url-pattern>/services/*</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>

	<error-page>
		<error-code>500</error-code>
		<location>/WEB-INF/jsp/errors/error.jsp</location>
	</error-page>

	<error-page>
		<error-code>404</error-code>
		<location>/WEB-INF/jsp/errors/404.jsp</location>
	</error-page>

	<taglib>
		<taglib-uri>http://java.sun.com/jsp/jstl/fmt</taglib-uri>
		<taglib-location>/WEB-INF/fmt.tld</taglib-location>
	</taglib>

	<taglib>
		<taglib-uri>http://java.sun.com/jsp/jstl/core</taglib-uri>
		<taglib-location>/WEB-INF/c.tld</taglib-location>
	</taglib>

	<resource-env-ref>
		<resource-env-ref-name>jms/o29mq</resource-env-ref-name>
		<resource-env-ref-type>javax.jms.Queue</resource-env-ref-type>
	</resource-env-ref>

	<resource-ref>
		<res-ref-name>jdbc/o29ds</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>CONTAINER</res-auth>
	</resource-ref>

	<resource-ref>
		<description>Connection Factory</description>
		<res-ref-name>jms/connectionFactory</res-ref-name>
		<res-type>javax.jms.QueueConnectionFactory</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>

</web-app>
